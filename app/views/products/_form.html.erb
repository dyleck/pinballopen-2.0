<%= form_for @product, class: "form" do |f| %>
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :price %>
      <%= f.number_field :price, step: "any", class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :sff_price %>
      <%= f.number_field :sff_price, step: "any", class: "form-control" %>
    </div>
    <%= f.button name: :submit, type: :submit %>
<% end %>