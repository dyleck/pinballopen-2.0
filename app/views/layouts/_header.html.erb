<header class="wet-asphalt">

  <div class="container" id="lang-switcher">
    <div class="row">
      <div class="col-xs-12">
        <div class="polyglot-language-switcher pull-left" <%= "data-selected-lang=#{I18n.locale}"%>>
          <ul style="display: none">
            <li>
              <%= link_to url_for(params.merge({ locale: :en })), data: {:lang_id => "en"} do %>
                  <%= image_tag "flags/gb.png", alt: "English" %> English
              <% end %>
            </li>
            <li>
              <%= link_to url_for(params.merge({ locale: :pl })), data: {:lang_id => "pl"} do %>
                  <%= image_tag "flags/pl.png", alt: "Polski" %> Polski
              <% end %>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </div>
  <div id="main-navbar" class="navbar navbar-inverse wet-asphalt" role="banner">
    <div class="container">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#main-navbar .navbar-collapse">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <%= link_to 'Polish Pinball Open 2016'.html_safe, root_path, class: 'navbar-brand' %>
      </div>
      <div class="collapse navbar-collapse">
        <ul class="nav navbar-nav navbar-right">
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown"><%= t('.menu.info.self') %> <i class="icon-angle-down"></i></a>
            <ul class="dropdown-menu">
            <% %w[description location hotels faq contact].each do |anchor| %>
              <li>
              <%= link_to url_for(controller: :static_pages, action: :home, anchor: anchor) do %>
                <%= t(".menu.info.#{anchor}") %>
              <% end %>
              </li>
            <% end %>
            </ul>
          </li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown"><%= t('.menu.tournaments.self') %> <i class="icon-angle-down"></i></a>
            <ul class="dropdown-menu">
              <li><%= link_to t('.menu.tournaments.main'), tournament_main_path %></li>
              <li><%= link_to t('.menu.tournaments.classic'), tournament_classic_path %></li>
              <li><%= link_to t('.menu.tournaments.bop'), tournament_bop_path %></li>
              <li><%= link_to t('.menu.tournaments.martians'), tournament_martians_path %></li>
            </ul>
          </li>
          <% if logged_in? %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown"><%= current_user.full_name %> <i class="icon-angle-down"></i></a>
            <ul class="dropdown-menu">
              <li><%= link_to t(".menu.user.profile"), user_path(current_user) %></li>
              <li class="divider"></li>
              <li><%= link_to t(".menu.user.logout"), logout_path, method: :delete %></li>
            </ul>
          </li>
          <% else %>
          <li><%= link_to t('.menu.login.self'), "#", data: { toggle: "modal", target: "#loginModal" } %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </div><!--/header-->

</header>