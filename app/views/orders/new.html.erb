<div class="container" style="margin-top: 15px;">
  <div class="row">
    <div class="col-xs-12 col-sm-8 col-sm-offset-2 col-md-4 col-md-offset-0">
      <div class="panel panel-primary">
        <div class="panel-heading">
          <h3 class="panel-title">
            <%= t('.order.self') %>
          </h3>
        </div>
        <div class="panel-body" id="cart">
          <%= render @current_order %>
        </div>
      </div>
    </div>
    <div class="col-xs-12 col-sm-8 col-sm-offset-2 col-md-7 col-md-offset-0 product-list" id="products">
        <%= render 'orders/products' %>
    </div>
  </div>
</div>