<div class="container" style="margin-top: 15px;">
  <div class="row">
    <div class="col-xs-12 col-sm-5">
      <div class="panel panel-primary">
        <div class="panel-heading">
          <h3 class="panel-title">
            Koszyk
          </h3>
        </div>
        <div class="panel-body" id="cart">
          <%= render @current_order %>
        </div>
      </div>
    </div>
    <div class="col-xs-12 col-sm-7 product-list">
        <% Product.all.each do |product| %>
          <div class="row">
            <%= form_for :order_item, url: order_items_path(product_id: product.id), remote: true, html: { class: "row-eq-height" } do |f| %>
              <div class="col-xs-7 underline flex-bottom no-margin">
                <%= product.name %>
                <% if product.name == 't-shirt' %>
                    rozmiar
                    <%= f.select :size, %w[XXL XL L M S] %>
                <% end %>
              </div>
              <div class="col-xs-2 text-right underline flex-bottom no-margin">
                <%= number_to_currency(product.price) %>
              </div>
              <div class="col-xs-3">
                <%= f.button "Do koszyka", class: "btn btn-xs btn-primary" %>
              </div>
            <% end %>
          </div>
        <% end %>
    </div>
  </div>
</div>