<%= form_for @user, url: @options[:edit] ? user_management_path(@user) : user_managements_path do |form| %>
    <div class="form-group">
      <%= form.label "Imię" %>
      <%= form.text_field :first_name, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= form.label "Nazwisko" %>
      <%= form.text_field :last_name, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= form.label "email" %>
      <%= form.text_field :email, type: :email, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= form.label "Hasło" %>
      <%= form.text_field :password, type: :password, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= form.label "Powtórz hasło" %>
      <%= form.text_field :password_confirmation, type: :password, class: "form-control" %>
    </div>
    <% if !@user.main_payed? %>
      <div class="checkbox">
        <%= label_tag do %>
            <%= check_box_tag "payment", "1", true %> Płatność
        <% end %>
      </div>
    <% end %>
    <div class="checkbox">
      <%= label_tag do %>
        <%= form.check_box :retired %> Wycofał się
      <% end %>
    </div>
    <div class="checkbox">
      <%= label_tag do %>
        <%= form.check_box :admin %> Admin
      <% end %>
    </div>
    <div class="checkbox">
      <%= label_tag do %>
        <%= form.check_box :sff_validated %> Członek SFF
      <% end %>
    </div>
    <%= form.hidden_field :activated, value: "1" %>
    <div class="form-group">
      <%= form.submit "Zapisz", class: "btn btn-primary" %>
    </div>
<% end %>