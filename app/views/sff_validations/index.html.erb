<div class="container">
  <div class="row">
    <div class="col-xs-5">
      <h4>Imię i nazwisko</h4>
    </div>
    <div class="col-xs-2 text-center">
      <h4>Admin</h4>
    </div>
    <div class="col-xs-2 text-center">
      <h4>SFF</h4>
    </div>
  </div>
  <div class="row">
      <% @users.each do |user| %>
        <%= form_for user, url: user_path(user, request_source: "sff_validations") do |f| %>
          <div class="col-xs-5">
            <%= user.full_name %>
          </div>
          <div class="col-xs-2 text-center">
            <%= f.label :admin do %>
              <%= f.check_box :admin %>
            <% end %>
          </div>
          <div class="col-xs-2 text-center">
            <%= f.label :sff_validated do %>
              <%= f.check_box :sff_validated %>
            <% end %>
          </div>
          <div class="col-xs-3">
            <%= f.submit "Wyślij" %>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>