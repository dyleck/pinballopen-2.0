<% if not flash.empty? %>
  <div class="container" id="flash-message">
    <div class="row">
      <div class="col-xs-12">
        <% flash.each do |msg_type, msg| %>
          <div class="alert alert-<%= "#{msg_type}" %>">
            <%= "#{msg}" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
<% end %>