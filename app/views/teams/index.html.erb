<% provide :title, "DruÅ¼yny" %>
<div class="container" id="teams">
  <div class="row">
    <div class="col-xs-12 alert alert-danger text-center">
      <h3 class="hidden-xs"><b><%= t(".only_created") %></b></h3>
      <p class="visible-xs-block"><b><%= t(".only_created") %></b></p>
    </div>
  </div>
  <div class="row header">
    <div class="col-xs-12 text-center">
      <h3><%= t(".header") %></h3>
      <hr>
    </div>
    <div class="col-xs-2 col-sm-1 col-sm-offset-3 text-center">
      <%= t(".number") %>
    </div>
    <div class="col-xs-5 col-sm-2 text-center">
      <%= t(".name") %>
    </div>
    <div class="col-xs-5 col-sm-3 text-center">
      <%= t(".members") %>
    </div>
  </div>
  <% @teams.each do |team| %>
      <div class="row <%= cycle "light", "dark" %>">
        <div class="col-xs-2 col-sm-1 col-sm-offset-3 text-center">
          <%= team.id %>
        </div>
        <div class="col-xs-5 col-sm-2 text-center">
          <%= team.name %>
        </div>
        <div class="col-xs-5 col-sm-3 text-center">
          <% team.members.each do |user| %>
          <span><%= user.full_name %></span><br>
          <% end %>
        </div>
      </div>
  <% end %>
</div>