<%= form_for @team, remote: true do |f| %>
    <% users = User.all_that_paid_for_main - [current_user] %>
<div class="panel panel-default panel-primary">
  <div class="panel-heading">
    <h3 class="panel-title">
      <%= f.text_field :name %>
      <%= f.hidden_field :captain_id, value: current_user.id %>
      <%= f.submit "Zapisz", class: "btn btn-xs btn-danger pull-right" %>
    </h3>
  </div>
  <div class="panel-body">
    <% 2.times do |index| %>
    <div class="form-group">
      <%= select_tag "team[users][]", options_for_select(users.map{|user| [user.full_name, user.id]}, nil), class: "form-control" %>
    </div>
    <% end %>
  </div>
</div>
<% end %>
