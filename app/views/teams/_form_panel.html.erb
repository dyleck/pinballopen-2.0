<%= form_for @team, remote: true do |f| %>
  <% users = User.all_that_paid_for_main + @team.users - [current_user] %>
<div class="panel panel-default panel-primary">
  <div class="panel-heading">
    <h3 class="panel-title">
      <%= f.text_field :name %>
      <%= f.hidden_field :captain_id, value: current_user.id %>
      <%= f.submit "Zapisz", class: "btn btn-xs btn-danger pull-right" %>
    </h3>
  </div>
  <div class="panel-body">
    <% 2.times do |index| %>
    <div class="form-group">
      <%=
        if (team_user = @team.users[index]).nil?
          select_tag "team[users][]",
                       options_for_select(users.map{|user| [user.full_name, user.id]}),
                       prompt: "wybierz",
                       class: "form-control"
        else

          select_tag "team[users][]",
                      options_for_select(users.map{|user| [user.full_name, user.id]},
                                         team_user.id),
                      class: "form-control"
        end
      %>
    </div>
    <% end %>
  </div>
</div>
<% end %>
