<% provide :title, "Turnieje" %>

<div class="container">
  <div class="row">
    <div class="col-xs-12 text-center">
      <h1>Turnieje</h1>
    </div>
  </div>
  <div class="row">
    <% @tournaments.each do |tournament| %>
      <div class="col-xs-8">
        <%= tournament.name %>
      </div>
      <div class="col-xs-4">
        <%= link_to "Pokaż", tournament_path(tournament), class: "btn btn-xs btn-primary" %>
        <%= link_to "Edytuj", edit_tournament_path(tournament), class: "btn btn-xs btn-warning" %>
        <%= link_to "Usuń", tournament_path(tournament), method: :delete, class: "btn btn-xs btn-danger" %>
      </div>
    <% end %>
  </div>
  <div class="col-xs-12 text-center">
    <%= link_to "Utwórz nowy", new_tournament_path, class: "btn btn-lg btn-primary" %>
  </div>
</div>