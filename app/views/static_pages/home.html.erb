<section id="faq" class="yellow-light">
  <div class="container">
    <div class="row">
      <div class="col-xs-12">
        <h1 class="text-center"><%= t(".faq.header") %></h1>
      </div>
    </div>
    <div class="row">
      <div class="panel-group" id="accordion">
      <% %w[question1 question2 question3 question4].each_with_index do |question| %>
        <div class="panel panel-default orange-border">
          <div class="panel-heading yellow-dark">
            <h4 class="panel-title">
              <%= link_to "##{question}", data: { parent: "#accordion", toggle: "collapse" } do %>
                <%= t(".faq.#{question}") %>
              <% end %>
            </h4>
          </div>
          <%= content_tag :div, id: "#{question}", class: "panel-collapse collapse yellow-light" + (question == "question1" ? " in" : "") do %>
            <div class="panel-body">
              <%= yield question.to_sym %>
            </div>
          <% end %>
        </div>
      <% end %>
      </div>
    </div>
  </div>
</section>

