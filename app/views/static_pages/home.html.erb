<h1 style="display: none">Polish Pinball Open 2016</h1>
<section class="no-margin" id="main-slider">
  <div class="carousel wet-asphalt" id="main-slider-content" data-ride="carousel">
    <ol class="carousel-indicators">
      <li data-target="#main-slider-content" data-slide-to="0" class="active"></li>
      <li data-target="#main-slider-content" data-slide-to="1"></li>
      <li data-target="#main-slider-content" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner">
      <div class="item active" id="slide-1">
        <div class="container" id="logo-ppo-div" style="height:100%;">
          <img id="logo-ppo" src="<%= asset_path("ppo-logo.png") %>"/>
          <div>
            <p class="animation animated-item-1 slider-huge text-right"><%= t(".slide1.date") %></p>
            <p class="animation animated-item-2 slider-huge text-right"><%= t(".slide1.place") %></p>
          </div>
          <div class="pinball-orgs">
            <div>
              <a href="http://www.flippery.org.pl" target="_blank"><img id="sff" src="<%= asset_path('sff-small.png') %>" class="org-logo" alt="Stowarzyszenie Fanów Flipperów"></a>
              <a href="http://www.ifpapinball.com/ecs/" target="_blank"><img id="ifpa" src="<%= asset_path('ecs-small.png') %>" class="org-logo" alt="IFPA ECS"></a>
              <a href="http://www.flippery.pl" target="_blank"><img id="pe-el" src="<%= asset_path('flippery-logo.png') %>" class="org-logo" alt="flippery.pl"></a>
              <a href="http://www.prosto.pl" target="_blank"><img id="prosto" src="<%= asset_path('prosto-logo.png') %>" class="org-logo" alt="prosto"></a>
            </div>
          </div>
          <script type="text/javascript">
            var alignLogos = (function() {
              if ($(window).outerWidth(true) < 767) {
                $orgs = $('.pinball-orgs')
                  var orgs_width = $('.pinball-orgs').outerWidth(true);
                  var doc_width = $(window).outerWidth(true);
                  $('.pinball-orgs').css('left', (doc_width - orgs_width)/2 + "px");
              } else {
                $('.pinball-orgs').css('left', "");
              }
            });
            $(document).on("page:change", alignLogos);
            $(window).on("resize orientationchange", alignLogos);
          </script>
        </div>
      </div>

      <div class="item" id="slide-2">
        <div class="container-fluid">
          <div class="animation animated-item-1 slider-huge">
            <span>Największa impreza<br>flipperowa w Polsce</span>
          </div>
          <div class="animation animated-item-3 slider-huge">
            <span>3 Główne Turnieje</span>
          </div>
        </div>
      </div><!--/.item-->

      <div class="item" id="slide-3">
        <div class="container-fluid">
          <div class="animation animated-item-1 slider-huge">
            <span>Ponad 70 maszyn</span>
          </div>
          <div class="animation animated-item-3 slider-huge">
            <span>Strefa Free Play</span>
          </div>
        </div>
      </div><!--/.item-->
    </div><!--/.carousel-inner -->

  </div><!--/.carousel-->
  <a class="prev hidden-xs" href="#main-slider-content" data-slide="prev">
    <i class="fa fa-angle-left fa-2x"></i>
  </a>
  <a class="next hidden-xs" href="#main-slider-content" data-slide="next">
    <i class="fa fa-angle-right fa-2x"></i>
  </a>
  <div class="container" id="btn-register">
    <div class="col-xs-12 text-center">
      <% if !current_user.nil? && current_user.activated? %>
        <%= link_to new_order_path, class: "slider-huge btn btn-xl animation animated-item-3" do %>
          <%= t("layouts.header.menu.user.order") %>
        <% end %>
      <% else %>
        <%= link_to signup_url, class: "slider-huge btn btn-xl animation animated-item-3" do %>
          <%= t(".slide1.register") %>
        <% end %>
      <% end %>
    </div>
  </div>
</section><!--/#main-slider-->

